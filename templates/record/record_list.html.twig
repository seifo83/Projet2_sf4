
{% extends '_template.html.twig' %}

{% block title %} records {% endblock %}

{% block content %}

    <div class="section">
        <h1 class="title"> Records: {{ record_list|length }} </h1>
        <div class="columns is-multiline">
            {% for record in record_list %}
            
                <div class="column is-one-third">
                    <div class="box">
                        <article class="media">
                            <div class="media-left">
                                <figure class="image is-128x128">
                                    <img src="https://loremflickr.com/256/256/record,music/all?lock={{record.id}}" alt="Image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <a href="{{ path('record_page', {id: record.id})}}" class="has-text-primary">
                                            <strong>{{record.title}}</strong>
                                        </a><br>
                                        <small>Date de cr√©ation: {{ record.releasedAt|date('Y')}}</small><br>
                                        {{record.description|slice(0, 20)}}
                                    </p>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            {% endfor %}
    </div>
    </div>

{% endblock %}
